# Matrix QA Test Runner - Environment Variables

# AI Provider API Keys
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
DEEPSEEK_API_KEY=

# Matrix QA API Key (for security)
API_KEY=

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/matrix_qa
JWT_SECRET=matrix_jwt_secret_key_for_authentication
ENCRYPTION_KEY=matrix_encryption_key_32chars_length
PORT=8000

# Jira Integration Configuration
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=
# Jira Automation Labels Configuration
# Comma-separated list of labels that trigger automation when tickets move to Done
# Only tickets with these labels will be processed for automated testing
JIRA_AUTOMATION_LABELS=qa-automation,matrix-test,automated-test,automation

# Alternative configurations for different use cases:
# For QA team only:
# JIRA_AUTOMATION_LABELS=qa-automation,qa-test

# For specific test types:
# JIRA_AUTOMATION_LABELS=ui-test,integration-test,smoke-test

# For development environments:
# JIRA_AUTOMATION_LABELS=dev-automation,test-automation